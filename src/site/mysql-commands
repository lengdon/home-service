drop user moranhat@localhost;

flush privileges;

create database homeservice_provider;
CREATE USER 'mrnprovider'@'%' IDENTIFIED BY 'abcd.1234';
GRANT SELECT,CREATE,DROP,ALTER,DELETE,EXECUTE,INSERT,TRIGGER,UPDATE,REFERENCES ON homeservice_provider.* TO 'mrnprovider'@'%';

create database homeservice_enduser;
CREATE USER 'mrnendusr'@'%' IDENTIFIED BY 'abcd.1234';
GRANT SELECT,CREATE,ALTER,DELETE,EXECUTE,INSERT,TRIGGER,UPDATE,REFERENCES ON homeservice_enduser.* TO 'mrnendusr'@'%';

create database homeservice_master;
CREATE USER 'mrnmaster'@'%' IDENTIFIED BY 'abcd.1234';
GRANT SELECT,CREATE,ALTER,DELETE,EXECUTE,INSERT,TRIGGER,UPDATE,REFERENCES ON homeservice_master.* TO 'mrnmaster'@'%';

create database homeservice_views;
CREATE USER 'moran'@'%' IDENTIFIED BY 'abcd.1234';
GRANT SELECT ON homeservice_views.* TO 'moran'@'%';



change database homeservice_master;
INSERT INTO country values (1, 'India'), (2, 'Nepal');
INSERT INTO state_province values (1, 'Uttar Pradesh',1), (2,'Assam',1);
INSERT INTO district values (1, 'Sivasagar',2), (2,'Dibrugarh',2);
INSERT INTO city_town_village values (1, 'Moran',1), (2,'Khowang',2);


